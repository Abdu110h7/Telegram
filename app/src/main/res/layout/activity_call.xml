<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingVertical="@dimen/_15sdp"
    android:layout_height="match_parent"
    android:background="#7BEDFB"
    tools:context=".Call.CallActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/white"
        android:text="Qo`ng`iroq qilinmoqda.."
        android:textSize="@dimen/_13ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ali Muhammad"
        android:layout_marginTop="@dimen/_15sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_25ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/_15sdp"
        app:cardCornerRadius="@dimen/_20sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".45"
        android:backgroundTint="#FDFDFD"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent=".8">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:paddingVertical="@dimen/_15sdp"
                android:paddingHorizontal="@dimen/_10sdp"
                android:layout_height="0dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:src="@drawable/crop_3"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_height="@dimen/_30sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Yozib olish"
                        android:layout_height="wrap_content"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:src="@drawable/volume_slash"
                        app:tint="#AAA9A9"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_height="@dimen/_30sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Yozib olish"
                        android:textColor="#AAA9A9"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:src="@drawable/ic_blutus"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_height="@dimen/_30sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Bluetooth"
                        android:layout_height="wrap_content"/>


                </LinearLayout>
            </LinearLayout>
             <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:paddingVertical="@dimen/_15sdp"
                android:paddingHorizontal="@dimen/_10sdp"
                android:layout_height="0dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:src="@drawable/volume_high"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_height="@dimen/_30sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Dinamik"
                        android:layout_height="wrap_content"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:src="@drawable/microphone_off"
                        app:tint="#AAA9A9"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_height="@dimen/_30sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Ovozni o`ch"
                        android:textColor="#AAA9A9"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:src="@drawable/category"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_height="@dimen/_30sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Klaviatura"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="0dp">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/_46sdp"
                    app:cardCornerRadius="@dimen/_23sdp"
                    android:backgroundTint="#CF1B1B"
                    android:layout_height="@dimen/_46sdp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/tel_1"
                        android:padding="@dimen/_8sdp"
                        android:layout_height="match_parent"/>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    
</androidx.constraintlayout.widget.ConstraintLayout>