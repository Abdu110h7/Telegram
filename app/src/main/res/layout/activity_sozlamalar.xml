<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.message.MessageFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:background="@drawable/bg_top_gradient"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            app:titleEnabled="false"
            app:contentScrim="@color/light_color"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:layout_height="@dimen/_200sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical "
                android:gravity="center"
                app:layout_collapseMode="parallax"
                android:layout_height="match_parent">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"/>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"/>

                <TextView
                    android:id="@+id/storyRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="Qo`ng`iroq"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_25ssp" />
            </LinearLayout>

            <com.google.android.material.appbar.MaterialToolbar
                android:layout_width="match_parent"
                app:layout_collapseMode="pin"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/group_370__2_"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="0dp"
                        android:text="Qo`ng`iroq"
                        android:textColor="@color/white"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:src="@drawable/kamar"
                        android:layout_height="@dimen/_30sdp">

                    </de.hdodenhof.circleimageview.CircleImageView>
                </LinearLayout>

            </com.google.android.material.appbar.MaterialToolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_minus20sdp"
        android:background="@drawable/shapenesteted"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginVertical="@dimen/_15sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_height="match_parent">

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="@dimen/_25sdp"
                android:layout_gravity="center"
                android:layout_height="@dimen/_3sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="Display Name"
                android:textSize="@dimen/_13ssp"
                android:textColor="#AAAAAA"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="Display Name"
                android:textSize="@dimen/_15ssp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>